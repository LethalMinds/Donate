<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_background"
    tools:context="com.lethalminds.udonate.client.fragments.ProfileEditFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="?attr/colorPrimary"
                android:padding="16dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_face_black_48dp"/>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_username_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:paddingLeft="10sp"
                android:backgroundTint="@android:color/holo_green_light"
                android:paddingRight="10sp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/edit_uname"
                    android:textColorHighlight="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:clickable="false"
                    android:editable="false"
                    android:textSize="14sp"
                    android:textColor="@color/counter_text_bg"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:hint="username"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:backgroundTint="@android:color/holo_green_light"
                android:paddingRight="10sp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/edit_email"
                    android:textColorHighlight="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:textColor="@color/counter_text_bg"
                    android:cursorVisible="false"
                    android:textSize="14sp"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:hint="email"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:backgroundTint="@android:color/holo_green_light"
                android:paddingRight="10sp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/edit_address"
                    android:textColorHighlight="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:textColor="@color/counter_text_bg"
                    android:textSize="14sp"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:hint="address"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_dob_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:backgroundTint="@android:color/holo_green_light"
                android:paddingRight="10sp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/edit_dob"
                    android:textColorHighlight="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:textSize="14sp"
                    android:textColor="@color/counter_text_bg"
                    android:text="mm-dd-yyy"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:hint="Date of Birth"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:backgroundTint="@android:color/holo_green_light"
                android:paddingRight="10sp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/edit_pass"
                    android:textColorHighlight="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:hint="change password"
                    android:textColor="@color/counter_text_bg"
                    android:textSize="14sp"
                    />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/list_background"
                android:id="@+id/submit"
                android:text="submit"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
