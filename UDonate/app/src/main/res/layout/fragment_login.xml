<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/list_background"
    android:layout_height="match_parent"
    tools:context="com.lethalminds.udonate.client.fragments.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/sample_text_username_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:backgroundTint="@android:color/holo_green_light"
            android:paddingRight="10sp"
            android:layout_marginBottom="8dp">
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/uname"
                android:textColorHighlight="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:backgroundTint="@android:color/holo_green_light"
                android:hint="username/email"
                />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/sample_text_password_layout"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_green_light"
                android:layout_marginBottom="8dp"
                android:paddingLeft="10sp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pass"
                    android:textColorHighlight="@color/colorPrimary"
                    android:inputType="textPassword"
                    android:cursorVisible="false"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:hint="password"
                    />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/forgotLink"
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingTop="20sp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:layout_marginRight="10sp"
                android:layout_height="wrap_content"

                android:text="Forgot?"/>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/list_background"
            android:text="Login"
            android:id="@+id/login"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New to UDonate? Signup"
            android:textColorHighlight="@color/colorPrimary"
            android:layout_marginTop="10sp"
            android:focusable="false"
            android:id="@+id/registerLink"
            android:cursorVisible="false"
            android:backgroundTint="@android:color/holo_green_light"
            android:textAlignment="center"/>
    </LinearLayout>

</FrameLayout>
